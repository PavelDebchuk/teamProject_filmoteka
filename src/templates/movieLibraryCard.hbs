<li class="photo-card" id="{{id}}">
	{{#if poster_path}}
		<img  srcset=" https://image.tmdb.org/t/p/w300{{poster_path}} 1x,
 				https://image.tmdb.org/t/p/w500{{poster_path}} 2x" src='https://image.tmdb.org/t/p/w300{{poster_path}}'
				alt="{{original_title}}" loading="lazy">
	{{else}}
		<img src='https://cdn.pixabay.com/photo/2016/03/31/18/36/cinema-1294496_1280.png' alt="default photo">
	{{/if}}
	<div class="film-discription-box">
<h2 class="film-discription film-title">{{original_title}}</h2>
 {{#each genres}}
  <span class="film-discription film-details">{{this.name}}
 {{/each}}
{{genre_ids}} | {{release_date}}</span>
<span  class="film-discription film-reiting">{{vote_average}}</span>
	</div>
</li>